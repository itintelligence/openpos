<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="Open_POSPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>bean.Purchase</class>
    <class>bean.Product</class>
    <class>bean.Salesline</class>
    <class>bean.Purchaseline</class>
    <class>bean.Supplier</class>
    <class>bean.Unit</class>
    <class>bean.Productcategory</class>
    <class>bean.Stock</class>
    <class>bean.Supplierpayment</class>
    <class>bean.User</class>
    <class>bean.Sales</class>
    <class>bean.Usercategory</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/openpos?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="japp"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="japp"/>
    </properties>
  </persistence-unit>
</persistence>
